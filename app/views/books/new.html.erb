<h1>New book</h1>
<%= form_with model:@book, url:'/books', local:true do |f| %>
<% if @book.errors.any? %>
 <div id="error_explanation" class="alert alert-danger">
  <ul>
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <% end %>
  </ul>
 </div>
<% end %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Body</h4>
 <%= f.text_area :body %>
<br><%= f.submit 'Create Book' %></br>
<% end %>